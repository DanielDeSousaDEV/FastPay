generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Customer {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  document  String   @unique
  createdAt DateTime @default(now())

  Charges Charge[]
}

model Charge {
  id           Int          @id @default(autoincrement())
  amount       Float
  paymentType  PaymentType
  status       ChargeStatus @default(PENDING)
  dueDate      DateTime? // só para boleto
  installments Int? // só para cartão
  createdAt    DateTime     @default(now())
  Customer     Customer     @relation(fields: [customerId], references: [id])
  customerId   Int
}

enum PaymentType {
  PIX
  CREDIT_CARD
  PAYMENT_SLIP
}

enum ChargeStatus {
  PENDING
  PAID
  FAILED
  EXPIRED
}
